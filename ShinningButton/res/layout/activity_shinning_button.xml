<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/shinningButtonBackGround"
    tools:context=".view.activity.ButtonAnimationExamples.ShinningButton.ShinningButton">

<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_32sdp"
    android:backgroundTint="@color/shinningButtonBackGround"
    app:cardCornerRadius="@dimen/_88sdp"
    app:cardElevation="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/offer_button"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/shine"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/shine"
            android:layout_marginStart="-20dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_150sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go back for Source Code"
            android:gravity="center"
            android:lines="2"
            android:textSize="@dimen/_16ssp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:elevation="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_round_arrow_back_24"
            android:drawablePadding="@dimen/_2sdp"
            android:backgroundTint="#244034"
            app:cornerRadius="@dimen/_200sdp"/>

    </LinearLayout>


</LinearLayout>