<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    android:background="@color/ball_button_color"
    tools:context="com.andoiddevop.animationassets.view.activity.ButtonAnimationExamples.BallButtonActivity">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/contact_book"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/messages"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/locatio_pin"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/facebook_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/facebook"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/settings"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/music"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/photo_camera"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/twitter_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/twitter" />

    <ImageView
        android:id="@+id/ballButton_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ball_button"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>